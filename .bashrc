# --------------------------------------------------------------------------------------------------
# Settings
# --------------------------------------------------------------------------------------------------
export TERM=xterm-256color
export EDITOR=vim
PS1="\w > "

# --------------------------------------------------------------------------------------------------
# Aliases
# --------------------------------------------------------------------------------------------------
alias ll="ls -lhFA"
alias l="ls -lhF"
alias c="clear"
alias r="source ~/.bash_profile 2> /dev/null && source ~/.bashrc 2> /dev/null"
